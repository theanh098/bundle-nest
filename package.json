{
  "name": "bundle-nest",
  "version": "0.0.1",
  "description": "",
  "author": "theanh098",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "bundle": "nest build && node .scripts/esbuild.bundle.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:prod": "node build/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --cache --max-warnings=0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run && pnpm test:database",
    "test:watch": "vitest",
    "test:unit": "TEST_DIR=unit vitest run",
    "test:e2e": "TEST_DIR=e2e vitest run",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:setup": "DATABASE_URL=postgresql://postgres:test@127.0.0.1:6000/db_test prisma db push --force-reset --skip-generate",
    "test:db:cleanup": "ts-node ./scripts/clean-testing-database.ts",
    "pretest:database": "POSTGRES_USER=postgres POSTGRES_PASSWORD=test POSTGRES_DB=db_test docker compose -f ./test-helper/docker-compose.yml up -d --wait",
    "test:database": "pnpm pretest:database && pnpm test:setup && TEST_DIR=database vitest run --sequence.shuffle --single-thread && pnpm test:db:cleanup",
    "test:cov": "vitest run --coverage",
    "db:push:dev": "dotenv -e config/.local.env prisma db push --skip-generate",
    "db:push": "dotenv -e config/.prod.env prisma db push --skip-generate"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.3",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.2.10",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "effect": "2.0.0-next.54",
    "nest-commander": "^3.12.5",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.9",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-v8": "^0.34.6",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.19.8",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "unplugin-swc": "^1.4.4",
    "vitest": "^0.34.6"
  }
}
